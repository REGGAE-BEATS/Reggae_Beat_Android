<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="reggae_beats.com.reggaebeats.DropboxActivity"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:gravity="top|center">

    <LinearLayout
        android:id="@+id/dropbox_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="25sp"
            android:text="Subscribe to the content dropbox to get access to the best video and music content"/>

        <Button
            android:id="@+id/dropbox_subscribe_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:textColor="#fff"
            android:textSize="25sp"
            android:onClick="Subscribe"
            android:text="Subscribe"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">
        <!--list of content on the server-->
        <ScrollView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <!--populated by code-->
        </ScrollView>

        <!--navigation-->
        <include
            android:layout_gravity="bottom|center"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            layout="@layout/navigation_bar"/>
    </LinearLayout>



</LinearLayout>
