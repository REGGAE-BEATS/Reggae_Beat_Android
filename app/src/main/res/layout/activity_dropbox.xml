<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="reggae_beats.com.reggaebeats.DropboxActivity"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:gravity="top|center">

    <LinearLayout
        android:id="@+id/dropbox_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="25sp"
            android:text="Subscribe to the content dropbox to get access to the best video and music content"/>

        <Button
            android:id="@+id/dropbox_subscribe_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:textColor="#fff"
            android:textSize="25sp"
            android:onClick="Subscribe"
            android:text="Subscribe"/>
    </LinearLayout>

    <!--MUSIC VISUALIZER-->
    <com.chibde.visualizer.BarVisualizer
        android:id="@+id/barVisualizer"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#fff"/>

    <!--list of content on the server-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--populated by code-->
        </LinearLayout>

    </ScrollView>

</LinearLayout>
